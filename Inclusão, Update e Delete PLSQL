--INCLUSÃO
DECLARE
    v_ID SEGMERCADO.ID%TYPE := 5;
    v_DESCRICAO SEGMERCADO.DESCRICAO%TYPE := 'Esportista';
BEGIN
    INSERT INTO SEGMERCADO (ID, DESCRICAO) VALUES (v_ID, UPPER(v_DESCRICAO));
    COMMIT;
END;

--UPDATE
DECLARE
  v_COD produto_exercicio.cod%type;
BEGIN
   v_COD := '41232';
   UPDATE PRODUTO_EXERCICIO SET DESCRICAO = REPLACE(DESCRICAO,'-','>') WHERE COD = v_COD;
    v_COD := '32223';
   UPDATE PRODUTO_EXERCICIO SET DESCRICAO = REPLACE(DESCRICAO,'-','>') WHERE COD = v_COD;
   COMMIT;
END;

--DELETE
DECLARE
    v_ID SEGMERCADO.ID%TYPE := 5;--não preciso da descricao para excluir, basta o id
BEGIN
    delete from SEGMERCADO where ID = v_ID;-- DELETEI O ID 5
    COMMIT;
END; 
